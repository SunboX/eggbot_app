# Local server
PORT=3000

# Optional OpenAI backend endpoint support
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_REASONING_EFFORT=minimal
AI_MAX_OUTPUT_TOKENS=1800
AI_DEBUG_LOGS=false

# Optional docs grounding for backend assistant
AI_DOCS_ENABLED=true
AI_DOCS_DIR=docs
AI_DOCS_FILES=getting-started.md,patterns-and-techniques.md,persistence-and-sharing.md,eggbot-connection.md
AI_DOCS_MAX_SNIPPETS=4
AI_DOCS_SNIPPET_CHARS=700
AI_DOCS_MAX_CONTEXT_CHARS=3200

# Optional explicit env path for php backend bootstrapping
# APP_ENV_FILE=/absolute/path/to/.env
